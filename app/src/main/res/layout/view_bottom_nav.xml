<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bottom_dark_sheet"
        android:paddingTop="14dp">

        <com.bestDate.view.bottomNav.CustomBottomNavButtonView
            android:id="@+id/buttonSearch"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonMatches"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.bestDate.view.bottomNav.CustomBottomNavButtonView
            android:id="@+id/buttonMatches"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonChats"
            app:layout_constraintStart_toEndOf="@+id/buttonSearch"
            app:layout_constraintTop_toTopOf="parent" />

        <com.bestDate.view.bottomNav.CustomBottomNavButtonView
            android:id="@+id/buttonChats"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonTop"
            app:layout_constraintStart_toEndOf="@+id/buttonMatches"
            app:layout_constraintTop_toTopOf="parent" />

        <com.bestDate.view.bottomNav.CustomBottomNavButtonView
            android:id="@+id/buttonTop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonGuests"
            app:layout_constraintStart_toEndOf="@+id/buttonChats"
            app:layout_constraintTop_toTopOf="parent" />

        <com.bestDate.view.bottomNav.CustomBottomNavButtonView
            android:id="@+id/buttonGuests"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonTop"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>