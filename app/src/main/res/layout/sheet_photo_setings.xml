<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="91dp"
            android:layout_height="91dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/deleteButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="26dp"
            app:cardBackgroundColor="@color/bg_main"
            app:cardCornerRadius="22dp"
            app:cardElevation="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardView2"
            app:layout_constraintStart_toEndOf="@+id/cardView2"
            app:layout_constraintTop_toTopOf="@+id/cardView2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_delete" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/editButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardBackgroundColor="@color/bg_main"
            app:cardCornerRadius="22dp"
            app:cardElevation="10dp"
            android:layout_marginStart="19dp"
            app:layout_constraintBottom_toBottomOf="@+id/deleteButton"
            app:layout_constraintStart_toEndOf="@+id/deleteButton"
            app:layout_constraintTop_toTopOf="@+id/deleteButton">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_edit" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.bestDate.view.SwitchView
        android:id="@+id/sympathySwitch"
        style="@style/standard_input"
        android:layout_marginTop="16dp" />

    <com.bestDate.view.SwitchView
        android:id="@+id/topFiftySwitch"
        style="@style/standard_input"
        android:layout_marginTop="10dp" />

    <com.bestDate.view.WhiteButton
        android:id="@+id/safeButton"
        style="@style/standard_button"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp" />
</LinearLayout>