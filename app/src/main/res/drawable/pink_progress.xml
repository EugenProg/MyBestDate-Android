<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/background">
        <shape android:shape="rectangle">
            <corners android:radius="7dp" />
            <gradient
                android:angle="90"
                android:endColor="@color/bg_black_gradient"
                android:startColor="@color/bg_gray_gradient" />
        </shape>
    </item>

    <item android:id="@+id/progress"
        android:top="3dp" android:start="3dp"
        android:end="3dp" android:bottom="3dp">
        <scale android:scaleWidth="100%">
            <layer-list
                android:shape="rectangle">
                <item>
                    <shape android:shape="rectangle">
                        <stroke
                            android:width="3dp"
                            android:color="@color/white_70" />
                        <solid android:color="@color/bg_pink" />
                        <corners android:radius="4dp" />
                    </shape>
                </item>
                <item android:top="3dp">
                    <shape android:shape="rectangle">
                        <stroke
                            android:width="3dp"
                            android:color="@color/bg_pink" />
                        <corners android:radius="4dp" />
                    </shape>
                </item>
            </layer-list>
        </scale>
    </item>
</layer-list>